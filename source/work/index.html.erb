---
pageable: true
per_page: 10
title: Work
---
<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <div class="cover" style="background-image: url('<%= "#{article.url}cover.jpg" %>');">
    <%= link_to article.title, article, relative: true %>
    <div class="inner">
      <% lines = article.data.quote.split('\n').map(&:strip) %>
      <% lines.each_with_index do |line, index| %>
        <span class="white">
          <%= "'" if index == 0 %><%= line %><%= "'" if index == (lines.size - 1) %>
        </span>
      <% end %>
      <span class="blue"><%= article.data.source %>,</span>
      <span class="blue"><%= article.data.company %></span>
    </div>
  </div>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
